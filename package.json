{
  "author": "Candidate Number: 365",

  "name": "schmidts-stinging-friends",
  "version": "1.0.0",
  "license": "LGPL-3.0",
  "description": "Schmidts Stinging Friends - A gacha game based on 'The Schmidt Pain Index' developed by the entomologist Dr. Justin Schmidts.",
  "keywords": [],

  "main": "index.js",
  "scripts": {
    "build": "webpack --mode production",
    "dev": "concurrently \"yarn watch:client\" \"yarn watch:server\"",
    "start": "node src/server/server.js",
    "test": "jest --coverage",
    "watch:client": "webpack --watch --mode development",
    "watch:server": "nodemon src/server/server.js --watch src/server --watch public/bundle.js"
  },
  "dependencies": {
    "express": "4.17.1",
    "express-session": "1.17.0",
    "express-ws": "4.0.0",

    "passport": "^0.4.0",
    "passport-local": "^1.0.0",

    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2"
  },
  "devDependencies": {
    "@babel/cli": "7.7.4",
    "@babel/core": "7.7.4",
    "@babel/plugin-proposal-class-properties": "7.7.4",
    "@babel/preset-env": "7.7.4",
    "@babel/preset-react": "7.7.4",

    "babel-jest": "24.9.0",
    "babel-loader": "8.0.6",

    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.15.1",
    "jest": "24.9.0",
    "supertest": "4.0.2",
    "jsdom": "16.5.0",
    "concurrently": "5.0.0",
    "nodemon": "2.0.1",
    "react-addons-test-utils": "^15.6.2",

    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.9.0",

    "md5": "2.2.1"
  },

  "engines": {
    "node": "^12.0.0"
  },

  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties"
    ],
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/react"
    ]
  },

  "jest": {
    "collectCoverageFrom": [
      "src/**/*.(js|jsx)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/jest-setup.js"
    ],
    "testEnvironment": "node",
    "testRegex": "tests/.*-test\\.(js|jsx)$"
  }
}